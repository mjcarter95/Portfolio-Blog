---
import Hero from "@/components/Hero.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/Section.astro";

// Load all publication markdown files
const allPublications = await Astro.glob('../content/publications/*.md');

// Parse into a JS Date, handling YYYY, YYYY-MM, YYYY-MM-DD
function parsePubDate(pub) {
  let raw = pub.frontmatter.date ?? pub.frontmatter.year;
  if (!raw) return new Date(0); // fallback earliest

  const str = String(raw).trim();
  if (/^\d{4}$/.test(str)) return new Date(`${str}-01-01`);
  if (/^\d{4}-\d{2}$/.test(str)) return new Date(`${str}-01`);
  return new Date(str);
}

// Sort newest → oldest
const sortedPublications = allPublications
  .sort((a, b) => parsePubDate(b) - parsePubDate(a))
  .slice(0, 3);

// Writing entries (adjust the path to wherever your md files live)
const allWriting = await Astro.glob('../content/writing/*.md');

// Reuse the same date parser used for publications
const parseItemDate = (entry) => {
  const raw = entry.frontmatter.date ?? entry.frontmatter.year;
  if (!raw) return new Date(0);
  const s = String(raw).trim();
  if (/^\d{4}$/.test(s)) return new Date(`${s}-01-01`);
  if (/^\d{4}-\d{2}$/.test(s)) return new Date(`${s}-01`);
  return new Date(s);
};

const recentWriting = allWriting
  .sort((a, b) => parseItemDate(b) - parseItemDate(a))
  .slice(0, 3);

  const formatDisplayDate = (raw) => {
  if (!raw) return "";
  const s = String(raw).trim();
  const d =
    /^\d{4}$/.test(s) ? new Date(`${s}-01-01`) :
    /^\d{4}-\d{2}$/.test(s) ? new Date(`${s}-01`) :
    new Date(s);
  return d.toLocaleString("en-US", { month: "long", year: "numeric" });
};
---


<BaseLayout title="Home — Matthew Carter">
  <Hero>
    <h1 class="text-4xl md:text-6xl font-semibold tracking-tight">
      Hey, I’m Matthew.
