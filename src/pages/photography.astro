---
import BaseLayout from "@/layouts/BaseLayout.astro";
---
<BaseLayout title="Photography - Matthew Carter">
  <section class="max-w-6xl mx-auto px-6 py-12">
    <h1 class="text-3xl font-bold border-b-4 border-black pb-4 mb-6 inline-block">
      Photography
    </h1>
    <p class="opacity-80 mb-6">A simple grid; replace with your own images.</p>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
      <img src="/images/hero.jpg" alt="Sample" class="aspect-[4/3] object-cover rounded-lg" />
      <div class="aspect-[4/3] bg-gray-200 rounded-lg"></div>
      <div class="aspect-[4/3] bg-gray-200 rounded-lg"></div>
      <div class="aspect-[4/3] bg-gray-200 rounded-lg"></div>
    </div>
  </section>
</BaseLayout>
