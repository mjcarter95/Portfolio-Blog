---
import BaseLayout from "@/layouts/BaseLayout.astro";
---
<BaseLayout title="Contact - Matthew Carter">
  <section class="max-w-2xl mx-auto px-6 py-12">
    <h1 class="text-3xl font-bold border-b-4 border-black pb-4 mb-6 inline-block">
      Contact
    </h1>
    <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-4">
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden">
        <label>Donâ€™t fill this out: <input name="bot-field" /></label>
      </p>
      <div>
        <label class="block text-sm mb-1">Name</label>
        <input name="name" required class="w-full border rounded px-3 py-2" />
      </div>
      <div>
        <label class="block text-sm mb-1">Email</label>
        <input name="email" type="email" required class="w-full border rounded px-3 py-2" />
      </div>
      <div>
        <label class="block text-sm mb-1">Message</label>
        <textarea name="message" rows="5" required class="w-full border rounded px-3 py-2"></textarea>
      </div>
      <button type="submit" class="px-4 py-2 rounded bg-black text-white">Send</button>
    </form>
  </section>
</BaseLayout>
