---
import "../styles/tailwind.css";
import "../styles/katex.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SEO from "@/components/SEO.astro";

const {
  title = "Matthew Carter â€” Research Associate",
  description = "Matthew Carter is a research associate at the University of Liverpool who combines Artificial Intelligence, Bayesian inference, and high-performance computing to help practitioners and researchers make fast, data-informed decisions in the face of uncertainty.",
  image = "/images/seo/og_card.png",
  hideHeader = false
} = Astro.props;

const headerVariant = Astro.url.pathname === "/" ? "overlay" : "solid";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <SEO title={title} description={description} image={image} />
  </head>

  <body>
    {!hideHeader && (
      <>
        <Header variant={headerVariant} />
        <div id="header-spacer" aria-hidden="true"></div>
      </>
    )}
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html {
  scroll-behavior: smooth;
}
</style>