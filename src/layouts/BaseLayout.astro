---
import "../styles/tailwind.css";

const {
  title = "Site Title",
  description = "Academic portfolio",
  hideHeader = false,
  navColor = "text-white"
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body class="font-sans antialiased text-gray-900">
    {!hideHeader && (
      <header class={`fixed top-0 left-0 w-full z-50 ${navColor}`}>
        <!-- Your site header/nav -->
      </header>
    )}

    <main>
      <slot />
    </main>

    <footer class="mt-12">
      <!-- Your footer content -->
    </footer>
  </body>
</html>
